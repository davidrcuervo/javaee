<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

  <display-name>Frontend</display-name>
  
  <servlet>
  	<servlet-name>home</servlet-name>
  	<jsp-file>/WEB-INF/jsp/home/frontendHome.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>home</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>redirect</servlet-name>
  	<servlet-class>com.laetienda.frontend.controller.RedirectController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>redirect</servlet-name>
  	<url-pattern></url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>User</servlet-name>
  	<servlet-class>com.laetienda.frontend.controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>User</servlet-name>
  	<url-pattern>/signup</url-pattern>
  	<url-pattern>/login</url-pattern>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <filter>
  	<filter-name>FilterForAll</filter-name>
	<filter-class>com.laetienda.frontend.tomcat.FilterForAll</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>FilterForAll</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
